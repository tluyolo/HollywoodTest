@model IEnumerable<HollywoodTest.Tournament>

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Tournament</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TournamentName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TournamentName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TounamentID }) |
        </td>
    </tr>
}

</table>
