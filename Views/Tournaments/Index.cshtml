@model IEnumerable<HollywoodTest.Tournament>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TounamentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TournamentName)
        </th>
        <th></th>
    </tr>
    @if (this.User.IsInRole("Admin") || this.User.IsInRole("Manager"))
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TounamentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TournamentName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.TounamentID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.TounamentID}) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.TounamentID })
                </td>
            </tr>
        }
    }

    @if (this.User.IsInRole("Cashier"))
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TounamentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TournamentName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TounamentID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TounamentID }) |
                </td>
            </tr>
        }
    }

</table>
