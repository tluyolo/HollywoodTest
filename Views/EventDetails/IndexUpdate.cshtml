@model IEnumerable<HollywoodTest.EventDetail>

@{
    ViewBag.Title = "IndexUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.4.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery.dataTables.min.js"></script>
    <script src="~/scripts/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                $('#DataTable').DataTable();
                $('#checkBoxAll').click(function () {
                    if ($(this).is(":checked")) {
                        $(".chkCheckBoxId").prop("checked", true)
                    }
                    else {
                        $(".chkCheckBoxId").prop("checked", false)
                    }
                });
            });
    </script>
</head>
<body>
    <div class="container py-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>Event Details List</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "EventDetails", FormMethod.Post))
                {
                    <br /><br />
                    <table id="DataTable" style="width:100%;" class="table table-bordered">
                        <thead>
                            <tr>

                                <th>Event Detail Name</th>
                                <th>Event Detail Number</th>
                                <th>First Timer</th>
                                <th> Event Name</th>
                                <th>Event Detail Status Name</th>
                                <th>Event Detail Odd</th>
                                <th>Finishing Position</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EventDetailName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EventDetailNumber)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FirsTimer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Event.EventName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EventDetailStatu.EventDetailStatusName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EventDetailOdd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FinishingPosition)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.EventDetailID })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                   }
            </div>
        </div>
    </div>
</body>
</html>
